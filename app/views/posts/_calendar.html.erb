<% params[:start_date] = start_date %>

<%= month_calendar attribute: :post_date, events: all_posts do |date, posts| %>

  <% if posts.empty? %>
    <%= date.day %>
  <% else %>
    <%= link_to posts_url(start_date: date) do %>
      <% if date.to_s == start_date.to_s %>
        <strong><%= date.day %></strong>
      <% else %>
        <%= date.day %>
      <% end %>
    <% end %>
  <% end %>
<% end %>