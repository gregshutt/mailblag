<div class="container">
  <%= form_tag site_login_path do %>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="well">
          <div class="row">
            <div class="col-xs-12">
              This site requires a password to view.
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= label_tag :site_password, "Enter your site password" %>
              <%= password_field_tag :site_password, '', class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>